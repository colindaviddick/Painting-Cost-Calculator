<Window x:Class="Painting_Cost_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Painting_Cost_Calculator"
        mc:Ignorable="d"
        Title="Painting Cost Calculator" Height="320" Width="370" HorizontalAlignment="Center">
    <Grid Height="290" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Medium:" HorizontalAlignment="Left" FontWeight="Bold" Margin="10,10,0,0" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="151" Grid.Column="1"/>

        <TextBlock Text="Number of faces (portraits)" HorizontalAlignment="Left" FontWeight="Bold" Margin="10,10,0,0" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="151" Grid.Column="2"/>

        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Canvas Width (Inches):" VerticalAlignment="Top" Height="20" Width="151" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Canvas Height (Inches):" VerticalAlignment="Top" Height="20" Width="151" Grid.Column="2"/>

        <ListBox x:Name="Selected_Medium" Grid.Column="1" HorizontalAlignment="Left" Height="105" Margin="10,35,0,0" VerticalAlignment="Top" Width="151">
            <ListBoxItem x:Name="Method_Oil">Oil painting</ListBoxItem>
            <ListBoxItem x:Name="Method_Charcoal">Charcoal drawing</ListBoxItem>
            <ListBoxItem x:Name="Method_Watercolour">Watercolour painting</ListBoxItem>
            <ListBoxItem x:Name="Method_Other">Other</ListBoxItem>
        </ListBox>

        <TextBox Grid.Column="1" x:Name="InchesWidth" HorizontalAlignment="Left" Height="30" Margin="10,35,0,0" Grid.Row="1" TextWrapping="Wrap" Text="24" VerticalAlignment="Top" Width="151"/>
        <TextBox Grid.Column="2" x:Name="InchesHeight" HorizontalAlignment="Left" Height="30" Margin="10,35,0,0" Grid.Row="1" TextWrapping="Wrap" Text="32"  VerticalAlignment="Top" Width="160"/>

        <TextBlock Text="Discount (%):" HorizontalAlignment="Left" FontWeight="Bold" Margin="10,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="151" Grid.Column="1"/>
        <TextBox x:Name="Discount" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="10,35,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>

        <TextBlock Text="Total Cost:" HorizontalAlignment="Left" FontWeight="Bold" Margin="10,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="151" Grid.Column="2"/>
        <TextBox x:Name="TotalPrice" Text="£ Price" Grid.Column="2" HorizontalAlignment="Left" Height="20" Margin="10,35,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>

        <ListBox x:Name="Selected_Faces" Grid.Column="2" HorizontalAlignment="Left" Height="105" Margin="10,35,0,0" VerticalAlignment="Top" Width="160">
            <ListBoxItem x:Name="Faces_0">0</ListBoxItem>
            <ListBoxItem x:Name="Faces_1">1</ListBoxItem>
            <ListBoxItem x:Name="Faces_2">2</ListBoxItem>
            <ListBoxItem x:Name="Faces_3">3</ListBoxItem>
            <ListBoxItem x:Name="Faces_4orMore">4+</ListBoxItem>
        </ListBox>
        <Button Content="Buy !" Grid.Column="2" HorizontalAlignment="Left" Margin="95,35,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
